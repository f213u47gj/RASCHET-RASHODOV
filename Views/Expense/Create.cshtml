@model RASCHET_HASHODOV.ViewModels.ExpenseFormViewModel

@{
    ViewData["Title"] = "Добавить расход";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Добавить расход</h2>

    <div class="card shadow-lg p-4 border-0 rounded-4">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label for="Amount" class="form-label fw-bold">Сумма</label>
                <input asp-for="Amount" class="form-control rounded-3" type="number" step="0.01" required>
            </div>

            <div class="mb-3">
                <label for="Description" class="form-label fw-bold">Описание</label>
                <input asp-for="Description" class="form-control rounded-3">
            </div>

            <div class="mb-3">
                <label for="CategoryId" class="form-label fw-bold">Категория</label>
                <select asp-for="CategoryId" class="form-select rounded-3" asp-items="ViewBag.Categories"></select>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success rounded-3">Добавить</button>
            </div>
        </form>
    </div>
</div>

<style>
    .container {
        max-width: 400px;
    }

    .card {
        background-color: #f8f9fa;
        border-radius: 16px;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        font-size: 1.1rem;
        padding: 10px;
    }

        .btn-success:hover {
            background-color: #218838;
        }
</style>
